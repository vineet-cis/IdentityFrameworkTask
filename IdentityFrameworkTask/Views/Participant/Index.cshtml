@model IEnumerable<IdentityFrameworkTask.ViewModels.ParticipantVM>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<style>
    button {
        display: inline-block;
        background-color: red;
        padding: 8px;
        width: 108px;
        color: #ffffff;
        text-align: center;
        border: 4px double #cccccc;
        border-radius: 10px;
        font-size: 14px;
    }

    th, td {
        padding: 10px;
        text-align: center;
    }
</style>

<h1 class="text-center text-primary">Event Registrations</h1>
<br />
<p>
    <button id="mybtn">Create</button>
</p>
<script>
    document.getElementById("mybtn").addEventListener("click", function () {
        window.location.href = '@Url.Action("Create", "Participant")';
    });
</script>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventData.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stuData.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventData.EventStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventData.EventEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th colspan="3">***Options***</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                   @item.EventStartDate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.EventEndDate.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.RegistrationDate.ToString("dd/MM/yyyy")
                </td>
                <td> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </td>
                <td> @Html.ActionLink("Details", "Details", new { id = item.Id }) </td>
                <td> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
            </tr>
        }
    </tbody>
</table>
