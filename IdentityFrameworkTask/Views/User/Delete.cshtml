@model IdentityFrameworkTask.DataModel.AppUser

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<style>
    .bold-label {
        font-weight: bold;
    }
</style>

<h1 class="txt text-primary text-center">Delete Event</h1>

<h5>Are you sure you want to delete this?</h5>
<br />
<div>
    <form id="myDel" method="post" action="@Url.Action("Delete")">

        @Html.LabelFor(model => model.FirstName, new { @class = "bold-label" }): &nbsp;

        @Html.DisplayFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })

        <br />

        @Html.LabelFor(model => model.LastName, new { @class = "bold-label" }): &nbsp;

        @Html.DisplayFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })

        <br />

        @Html.LabelFor(model => model.Email, new { @class = "bold-label" }): &nbsp;

        @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

        <br />

        @Html.LabelFor(model => model.Address, new { @class = "bold-label" }): &nbsp;

        @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })

        <br />

        @Html.LabelFor(model => model.PhoneNumber, new { @class = "bold-label" }): &nbsp;

        @Html.DisplayFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })

        <br />

        @Html.LabelFor(model => model.UserName, new { @class = "bold-label"}): &nbsp;

        @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })

        <br />

        @Html.LabelFor(model => model.UserName, "Role", new { @class = "bold-label"}): &nbsp;

        @if (User.IsInRole("Admin"))
        {
            <text>Admin</text>
        }
        else if (User.IsInRole("User"))
        {
            <text>User</text>
        }
        else
        {
            <text>Guest</text>
        }
        <br />
        <br />

        <button type="submit" class="btn btn-danger" id="myDel">Delete</button> &nbsp; |
        @Html.ActionLink("Back to List", "Index")
    </form>
</div>

