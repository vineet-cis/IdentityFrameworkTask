@model IdentityFrameworkTask.ViewModels.UserVM
@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}
<style>

    .bold-label {
        
        font-weight: bold;
    }

    #div{
        white-space : nowrap;
    }

    #btn{
        padding: 5px;
    }

</style>

<h1 class="text-center text-primary">Edit User</h1>
<br />
<div @*class="row"*@>
    <div>
        <div class="col-5 offset-2">
            <form id="myReg" method="post" action="@Url.Action("Edit", "User")">
                <table align="right">
                    <tr>
                        <td>@Html.LabelFor(model => model.User.FirstName, new { @class = "bold-label" }): &nbsp;</td>
                        <td>  </td>
                        <td></td>
                        <td>
                            @Html.EditorFor(model => model.User.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.User.LastName, new { @class = "bold-label" }): &nbsp;</td>
                        <td>  </td>
                        <td></td>
                        <td>
                            @Html.EditorFor(model => model.User.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.User.Email, new { @class = "bold-label" }): &nbsp;</td>
                        <td>  </td>
                        <td></td>
                        <td>
                            @Html.EditorFor(model => model.User.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                    </tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.User.PhoneNumber, "PhoneNumber :", new { @class = "bold-label" }) @*&nbsp;*@</td>
                        <td>  </td>
                        <td></td>
                        <td>@Html.EditorFor(model => model.User.PhoneNumber, new { htmlAttributes = new { @class = "form-control"} })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.User.Address, new { @class = "bold-label" }): &nbsp;</td>
                        <td>  </td>
                        <td></td>
                        <td>@Html.EditorFor(model => model.User.Address, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    @if (User.IsInRole("Admin"))
                    {
                        <tr>
                            <td>@Html.LabelFor(model => model.Role, new { @class = "bold-label" }): &nbsp;</td>
                            <td>  </td>
                            <td></td>
                            <td>
                                @Html.DropDownListFor(model => model.AppRoleId, Model.AppRoles, "--Select a Role--", new { @class = "form-control" })
                            </td>
                        </tr>
                        <tr></tr>
                        <tr></tr>
                    }
                    <tr>
                        <td>@Html.LabelFor(model => model.User.UserName, new { @class = "bold-label" }): &nbsp;</td>
                        <td>  </td>
                        <td></td>
                        <td>@Html.EditorFor(model => model.User.UserName, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr><td></td></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.OldPassword, "Old Password", new { @class = "bold-label" }): @*&nbsp;*@</td> 
                        <td>  </td>
                        <td></td>
                        <td>@Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" }})</td>
                        <td> <div asp-validation-summary="All" class="text-danger" id="div"></div> </td>
                    </tr>
                    <tr><td></td></tr>
                    <tr><td></td>
                    <tr>
                        <td>@Html.LabelFor(model => model.NewPassword, new { @class = "bold-label" }): @*&nbsp;*@</td>
                        <td>  </td>
                        <td></td>
                        <td>@Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    
                </table>
                &nbsp;
                <br />
                    <button type="submit" class="btn btn-success" id="myButton">Update</button> &nbsp; | &nbsp;
                    <span>@Html.ActionLink("Back to List", "Index")</span>
            </form>
        </div>
    </div>
</div>
